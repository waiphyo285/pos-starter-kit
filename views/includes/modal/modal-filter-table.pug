div.modal.fade#dialogFilterTable(tabindex='-1', role='dialog', aria-labelledby='dialogFilterTable')
  div.modal-dialog.modal-dialog-centered.modal-md(role='document')
    div.modal-content
      div.modal-header
        h5.modal-title !{content.modal.filter_table}
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      
      div.modal-body
        form#filterModalForm.form-horizontal(method="post", action="#")
          div.form-group.row
            div.col-sm-12.mb-2
              label.control-label(for='start_date') !{content['modal-lbl'].from_date}
              .input-group
                input.form-control.fromdate#start_date(type='text', name='created_at[gte]', editable="false"  autocomplete="off")
                .input-group-prepend
                  span.input-group-text.rounded-right
                    i.bi.bi-calendar3-range 

            div.col-sm-12
              label.control-label(for='end_date')  !{content['modal-lbl'].to_date}
              .input-group
                input.form-control.todate#end_date(type='text', name='created_at[lt]', editable="false" autocomplete="off")
                .input-group-prepend
                  span.input-group-text.rounded-right
                    i.bi.bi-calendar3-range
          
          include ./includes/modal-status-btn
      
      include ./includes/modal-filter-btn

  script.
    $(document).ready(function() {
      $("#dialogFilterReset").on('click', function(){
        // reset input
        $('#filterModalForm')[0].reset();
        // reset radio
        $('.btn-group :radio').prop('checked', false);
        $('.btn-group .active').removeClass('active');
        // reset select
        $('#filterModalForm').find('select').each(function(){
          $(this).change();
        });
      })
    })
