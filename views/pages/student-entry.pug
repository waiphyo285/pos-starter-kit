extends ../includes/layout-main
block content
  main.border.mx-3.mb-5.p-3(role='main')
    include ./../includes/entry/entry-header

    //- this is single file upload
    form.d-none#uploadForm(method='POST' action='/file/upload/students' enctype="multipart/form-data")
      input#fileInput(type='file' name='uploaded_file' accept="image/png, image/jpeg")

    //- this is multiple files upload
    //- form(method='POST' action='/file/multiUpload/multitest' enctype='multipart/form-data')
    //-   input(type='file' name='uploaded_files' multiple='')

    include ./../includes/entry/entry-form
      block inputs
        div.form-group.d-none 
          div.row.remove-img-list

        div.form-group  
          include ./../includes/common/input-image

        div.form-group.row
          div.col-md-4.mb-3
            label.control-label(for='name') !{content.name} *
            input.form-control.input-sm#name(type='text', name='name', value=data.name, maxlength="55" autocomplete="off" required autofocus)
            span.invalid-feedback
              | !{content.common.err_required}

          div.col-md-4.mb-3
            label.control-label(for='age') !{content.age} *
            input.form-control.input-sm#age(type='number', name='age', role='number', min='16' max='120' onkeyup="if(parseInt(this.value)>this.max){ this.value=this.max; return false; }" value=data.age autocomplete="off" required)
            span.invalid-feedback
              | !{content.common.err_required}

        div.form-group.row
          div.col-md-4.mb-3
            label.control-label(for='grade') !{content.grade} *
            input.form-control.input-sm#grade(type='number', name='grade', role='number', min='1' max='11' onkeyup="if(parseInt(this.value)>this.max){ this.value=this.max; return false; }" value=data.grade autocomplete="off" required)
            span.invalid-feedback
              | !{content.common.err_required}

          div.col-md-4.mb-3
            include ./../includes/common/input-status

        include ./../includes/entry/entry-btn

    form#postSuccessForm(method='GET', action=page.list.url)

  script(src="/javascript/pages/upload-file.js") 