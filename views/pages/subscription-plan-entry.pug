extends ../includes/layout-main
block content
  main.border.mx-3.mb-5.p-3(role='main')
    include ./../includes/entry/entry-header

    ul#myTab.nav.nav-tabs.mb-3(role='tablist')
      li.nav-item(role='presentation')
        button#information-tab.nav-link.active(data-toggle='tab' data-target='#information' type='button' role='tab' aria-controls='information' aria-selected='true')
          i.bi.bi-info-circle
          span.d-none.d-lg-block !{content.common.tab_info}
          
    include ./../includes/entry/entry-form
      block inputs
        #myTabContent.tab-content
          #information.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='information-tab')

            div.form-group.row
              div.col-md-6.mb-3
                label.control-label(for='plan_type') !{content.plan_type} *
                select.form-control.input-sm.custom-select.all-select2-picker#planType(name='plan_type' value=data.plan_type data-value=data.plan_type, data-live-search="true", data-size="8" required)
                span.invalid-feedback
                  | !{content.common.err_required}
            
              div.col-md-6.mb-3
                label.control-label(for='max_store') !{content.max_store}
                input.form-control.input-sm#maxStore(type='number', name='max_store', value=data.max_store || 1, maxlength="55" autocomplete="off" required)
                span.invalid-feedback
                  | !{content.common.err_required}

              div.col-md-6.mb-3
                label.control-label(for='max_user') !{content.max_user}
                input.form-control.input-sm#maxUser(type='number', name='max_user', value=data.max_user || 1, maxlength="55" autocomplete="off" required)
                span.invalid-feedback
                  | !{content.common.err_required}

              div.col-md-6.mb-3
                label.control-label(for='max_item') !{content.max_item}
                input.form-control.input-sm#maxItem(type='number', name='max_item', value=data.max_item || 1, maxlength="55" autocomplete="off" required)
                span.invalid-feedback
                  | !{content.common.err_required}

              div.col-md-6.mb-3
                label.control-label(for='max_device') !{content.max_device}
                input.form-control.input-sm#maxDevice(type='number', name='max_device', value=data.max_device || 1, maxlength="55" autocomplete="off" required)
                span.invalid-feedback
                  | !{content.common.err_required}

              div.col-md-6.mb-3
                label.control-label(for='duration') !{content.duration}
                input.form-control.input-sm#duration(type='number', name='duration', value=data.duration || 1, maxlength="55" autocomplete="off" required)
                span.invalid-feedback
                  | !{content.common.err_required}

              div.col-md-12.mb-3
                include ./../includes/common/input-status

        include ./../includes/entry/entry-btn

    form#postSuccessForm(method='GET', action=page.list.url)

  script.
    $(document).ready(function() {
      ajaxLoadOption({
        type: "GET",
        url:"/config-plans",
        selectId: "#planType",
        showKey: "display",
        filterObj: {},
      });
    });